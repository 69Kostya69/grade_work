@model IEnumerable<RestaurantApplication.Models.DishViewModel>


@{
    ViewData["Title"] = "Menu";
}

    <style type="text/css">
        #bg {
            background-image: url(/img/fonmenu.jpg);
            background-size: 100%;
        }

        #as2 {
            background: #f0f0f0;          
            float: left;
        }
    </style>

    <div id="bg">
        @using (Html.BeginForm())
        {
            <fieldset>
                <legend class="text-info">Сhoose the type of dish!</legend>

                <p>
                    <select name="tdishes" id="tdishes">
                        <option value="All">All </option>
                        <option value="Pizza"> Pizza</option>
                        <option value="Sushi"> Sushi</option>
                        <option value="Hot"> Hot</option>
                        <option value="Salads">Salads </option>
                    </select>
                </p>

                <p>
                    <input asp-area="" asp-controller="Home" asp-action="Menu" class="btn btn-info" type="submit" value="Find" />
                </p>
            </fieldset>

        }

        <h1 class="text-lg-center text-dark">Menu</h1>

        <aside id="as2">
            <div class="btn-group">
                <a class="btn btn-info" asp-area="" asp-controller="Home" asp-action="Menu" asp-route-tdishes="All">All </a>
                <a class="btn btn-info" asp-area="" asp-controller="Home" asp-action="Menu" asp-route-tdishes="Pizza">Pizza </a>
                <a class="btn btn-info" asp-area="" asp-controller="Home" asp-action="Menu" asp-route-tdishes="Sushi">sushi </a>
                <a class="btn btn-info" asp-area="" asp-controller="Home" asp-action="Menu" asp-route-tdishes="Salads">salads</a>
                <a class="btn btn-info" asp-area="" asp-controller="Home" asp-action="Menu" asp-route-tdishes="Hot">hot</a>
            </div>
        </aside>

        <div class="row mt-5 mb-2">

            @foreach (var item in Model)
            {
                <div class="col-lg-4">

                    <img class="img-thumbnail" src="@item.img" alt="@item.Name" width="400" height="150" />
                    @Html.DisplayFor(modelItem => item.Name)
                    @Html.DisplayFor(modelItem => item.Price)$
                    <a class="btn btn-info" asp-area="" asp-controller="Home" asp-action="DetailsDishes" asp-route-id="@item.Id">
                        Details

                        <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-eye" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd" d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8zM1.173 8a13.134 13.134 0 0 0 1.66 2.043C4.12 11.332 5.88 12.5 8 12.5c2.12 0 3.879-1.168 5.168-2.457A13.134 13.134 0 0 0 14.828 8a13.133 13.133 0 0 0-1.66-2.043C11.879 4.668 10.119 3.5 8 3.5c-2.12 0-3.879 1.168-5.168 2.457A13.133 13.133 0 0 0 1.172 8z" />
                            <path fill-rule="evenodd" d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5zM4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0z" />
                        </svg>

                    </a>
                    <a class="btn btn-success" href="#">
                        Add
                        <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-cart-check" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd" d="M11.354 5.646a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708 0l-1.5-1.5a.5.5 0 1 1 .708-.708L8 8.293l2.646-2.647a.5.5 0 0 1 .708 0z" />
                            <path fill-rule="evenodd" d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .491.592l-1.5 8A.5.5 0 0 1 13 12H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5zM3.102 4l1.313 7h8.17l1.313-7H3.102zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm-7 1a1 1 0 1 0 0 2 1 1 0 0 0 0-2zm7 0a1 1 0 1 0 0 2 1 1 0 0 0 0-2z" />
                        </svg>
                    </a>
                </div>

            }

        </div>
    </div>

